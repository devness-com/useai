{
  "name": "@devness/useai",
  "version": "0.6.12",
  "description": "Track your AI-assisted development workflow. MCP server that records usage metrics across all your AI tools.",
  "keywords": [
    "mcp",
    "ai",
    "developer-tools",
    "cursor",
    "claude-code",
    "windsurf",
    "copilot",
    "ai-coding",
    "leaderboard",
    "workflow",
    "model-context-protocol"
  ],
  "author": "nabeelkausari",
  "license": "MIT",
  "type": "module",
  "bin": {
    "useai-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "daemon": "pnpm run build && node dist/index.js daemon",
    "bundle": "tsup",
    "prepublishOnly": "pnpm run bundle",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@devness/mcp-setup": "^0.1.0",
    "@inquirer/prompts": "^8.2.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/node": "^22.13.4",
    "@useai/shared": "workspace:*",
    "chalk": "^5.4.1",
    "smol-toml": "^1.6.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2",
    "zod": "^3.24.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devness-com/useai"
  },
  "homepage": "https://useai.dev",
  "engines": {
    "node": ">=18"
  }
}
